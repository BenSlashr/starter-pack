// TODO: Replace with your actual tools
const tools = [
  {
    title: 'Quiz interactif',
    description: "Testez vos connaissances avec des quiz integres dans chaque guide.",
    href: '/outils',
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    color: 'text-primary',
    bgColor: 'bg-primary/10 border-primary/20',
  },
  {
    title: 'Arbre de decision',
    description: "Repondez a quelques questions pour obtenir une recommandation personnalisee.",
    href: '/outils',
    icon: 'M8 9l4-4 4 4m0 6l-4 4-4-4',
    color: 'text-secondary-light',
    bgColor: 'bg-secondary/10 border-secondary/20',
  },
  {
    title: 'Comparateur',
    description: "Comparez 2 a 4 produits ou services cote a cote avec scores et details.",
    href: '/outils',
    icon: 'M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3',
    color: 'text-primary',
    bgColor: 'bg-primary/10 border-primary/20',
  },
];
---

<section class="py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-end justify-between mb-10">
      <div>
        <h2 class="font-display font-800 text-2xl sm:text-3xl tracking-tight mb-3">
          Outils <span class="text-gradient-primary">gratuits</span>
        </h2>
        <p class="text-text-secondary max-w-xl">
          Quiz, comparateurs, arbres de decision. Sans compte, sans pub, 100% prives.
        </p>
      </div>
      <a href="/outils" class="hidden sm:inline-flex items-center gap-1 text-sm text-primary hover:underline cursor-pointer flex-shrink-0">
        Voir tous les outils
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {tools.map((tool) => (
        <a
          href={tool.href}
          class="group flex items-start gap-4 p-5 rounded-xl border border-border hover:border-primary/30 bg-surface-raised/30 hover:bg-surface-hover/50 transition-all cursor-pointer"
        >
          <div class={`w-10 h-10 rounded-lg ${tool.bgColor} border flex items-center justify-center flex-shrink-0`}>
            <svg class={`w-5 h-5 ${tool.color}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d={tool.icon} />
            </svg>
          </div>
          <div class="min-w-0">
            <h3 class="font-display font-700 text-sm group-hover:text-primary transition-colors mb-1">{tool.title}</h3>
            <p class="text-xs text-text-muted leading-relaxed">{tool.description}</p>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-6 text-center sm:hidden">
      <a href="/outils" class="inline-flex items-center gap-1 text-sm text-primary hover:underline cursor-pointer">
        Voir tous les outils
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
