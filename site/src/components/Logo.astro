---
interface Props {
  variant?: 'horizontal' | 'icon';
  size?: 'sm' | 'md' | 'lg';
}

const { variant = 'horizontal', size = 'md' } = Astro.props;

const iconSizes = { sm: 'w-7 h-7', md: 'w-9 h-9', lg: 'w-12 h-12' };
const textSizes = { sm: 'text-base', md: 'text-lg', lg: 'text-2xl' };
---

<div class={`flex items-center ${variant === 'horizontal' ? 'gap-2.5' : ''}`}>
  <!-- TODO: Replace with your own logo SVG -->
  <div class={`${iconSizes[size]} flex-shrink-0`}>
    <svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <rect width="64" height="64" rx="14" fill="#0E1525" class="transition-colors duration-200 group-hover:fill-[#141D30]"/>
      <rect x="10" y="46" width="12" height="10" rx="2.5" fill="#7C3AED"/>
      <rect x="22" y="36" width="12" height="10" rx="2.5" fill="#8B5CF6"/>
      <rect x="16" y="26" width="12" height="10" rx="2.5" fill="#A78BFA"/>
      <rect x="30" y="16" width="12" height="10" rx="2.5" fill="#D97706"/>
      <rect x="40" y="6" width="12" height="10" rx="2.5" fill="#F59E0B"/>
    </svg>
  </div>

  {variant === 'horizontal' && (
    <span class={`font-display font-800 ${textSizes[size]} tracking-tight leading-none`}>
      <!-- TODO: Replace with your site name -->
      <span class="text-text-primary">My</span><span class="text-primary">Site</span>
    </span>
  )}
</div>
