---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
// TODO: Replace with your domain
const absoluteUrl = url.startsWith('http') ? url : `https://www.example.com${url}`;
const encodedUrl = encodeURIComponent(absoluteUrl);
const encodedTitle = encodeURIComponent(title);
---

<div class="flex items-center gap-2">
  <span class="text-xs text-text-muted mr-1">Partager</span>

  <!-- Twitter / X -->
  <a
    href={`https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
    target="_blank"
    rel="noopener noreferrer"
    class="w-8 h-8 rounded-lg border border-border hover:border-primary/40 flex items-center justify-center transition-colors cursor-pointer group"
    aria-label="Partager sur X (Twitter)"
  >
    <svg class="w-3.5 h-3.5 text-text-muted group-hover:text-primary transition-colors" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
    </svg>
  </a>

  <!-- LinkedIn -->
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="w-8 h-8 rounded-lg border border-border hover:border-primary/40 flex items-center justify-center transition-colors cursor-pointer group"
    aria-label="Partager sur LinkedIn"
  >
    <svg class="w-3.5 h-3.5 text-text-muted group-hover:text-primary transition-colors" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
    </svg>
  </a>

  <!-- Copy link -->
  <button
    data-copy-url={absoluteUrl}
    class="copy-link-btn w-8 h-8 rounded-lg border border-border hover:border-primary/40 flex items-center justify-center transition-colors cursor-pointer group"
    aria-label="Copier le lien"
  >
    <svg class="w-3.5 h-3.5 text-text-muted group-hover:text-primary transition-colors copy-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
    </svg>
    <svg class="w-3.5 h-3.5 text-positive transition-colors check-icon hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
  </button>
</div>

<script>
  document.querySelectorAll('.copy-link-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const url = (btn as HTMLElement).dataset.copyUrl;
      if (!url) return;
      await navigator.clipboard.writeText(url);
      const copyIcon = btn.querySelector('.copy-icon');
      const checkIcon = btn.querySelector('.check-icon');
      copyIcon?.classList.add('hidden');
      checkIcon?.classList.remove('hidden');
      setTimeout(() => {
        copyIcon?.classList.remove('hidden');
        checkIcon?.classList.add('hidden');
      }, 2000);
    });
  });
</script>
